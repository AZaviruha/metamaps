<div class="focus">
	
	<div class="focusleft">
		<p><%= @item.item_category.name %></p>
		<%= image_tag @item.item_category.icon, :class => 'icon' %>
	</div>
	<div class="focusmiddle">
		<h1 class="title"><%= @item.name %></h1>
		<div class="desc">
			<h3>About</h3>
			<p><%= @item.desc %></p>
		</div>
	</div>
	<div class="focusright">
		<p>Link</p>
		<%= link_to @item.link, @item.link, :class => 'link' %>
	</div>
</div>
<div class="clearfloat nodemargin"></div>

<div class="groups">
  <% @gparents.each do |group| %>
    <%= render group %>
  <% end %>
  <% if @gparents.empty? %>
	 <p><br>Shucks, there are no groups.<p>
	<% end %>
</div>
<div class="clearfloat"></div>

<div class="parents">
  <% @pparents.each do |person| %>
    <%= render person %>
  <% end %>
  <% if @pparents.empty? %>
	 <p><br>Shucks, there are no people.<p>
	<% end %>
</div>
<div class="clearfloat"></div>
	
<div class="items">
  <% @iparents.each do |item| %>
    <%= render item %>
  <% end %>
  <% if @iparents.empty? %>
	 <p><br>Shucks, there are no items.<p>
	<% end %>
</div>
<div class="clearfloat"></div>

<div class="items">
  <% @ichildren.each do |item| %>
    <%= render item %>
  <% end %>
  <% if @ichildren.empty? %>
	 <p><br>Shucks, there are no items.<p>
	<% end %>
</div>
<div class="clearfloat"></div>
