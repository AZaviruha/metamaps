#metacodeSelector {
  display: none;
}

.metacodeSelect {
  border-top: 1px solid #DDD;
  padding: 0;
  background: #FFF;
    
  .metacodeFilterInput {
    width: 100px;
    outline: none;
    border: 0;
    padding: 8px;
    font-size: 14px;
    line-height: 14px;
    color: #424242;
    font-family: 'din-medium', helvetica, sans-serif;
  }
  
  .metacodeList {
    list-style: none;
    background: #FFF;
    
    li {
      padding: 8px;
      cursor: pointer;
      
      &:hover, &.keySelect {
        background: #4CAF50;
      }
    }

    img {
      width: 24px;
      height: 24px;
      display: inline-block;
      vertical-align: middle;
      padding-right: 6px;
    }
  }
}
